<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Photo Fetcher</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <div class="container">
        <h2>Photo Fetcher</h2>

        <div class="features">
            <div class="grayscale">
                <form action="/gray">
                    <label class="switch">
                        <input onclick="" class="toggle" type="submit">
                        <span class="slider round"></span>
                    </label>
                </form>
                <span class="grayscale_text">Make photos grayscale</span>
            </div>


            <form action="/" method="get">
                <button class="fetch2" type="submit" onclick="fetchNewPhotos()">Fetch New Photos</button>
            </form>
            

        </div>

        <div class="pictures">
            <% for (let i = 0; i < numberImages; i++) { %>
                <% var random = Math.floor(Math.random() * 200) %>
                <% if (grayScale) { %>
                <img class="image gray" src="https://picsum.photos/id/<%= random %>/500/300" alt="pcisum">
                <% } else { %>
                    <img  class="image" src="https://picsum.photos/id/<%= random %>/500/300" alt="pcisum">
                <% } %>
            <% } %>
            
        </div>

        <form id="morePhotosForm" action="/new">
            <button class="fetch" onclick="fetchMorePhotos()" method="get" type="button">More Photos</button>
        </form>

    </div>
    <script>
        const toggle = document.querySelector('.toggle');
    
        toggle.addEventListener('change', () => {
            document.querySelectorAll(".image").forEach((image) => {
                if (toggle.checked) {
                    image.classList.add('gray');
                } else {
                    image.classList.remove('gray');
                }
            });
        });

        function fetchMorePhotos() {
        var xhr = new XMLHttpRequest();
        xhr.onreadystatechange = function () {
            if (xhr.readyState === 4 && xhr.status === 200) {
                var data = JSON.parse(xhr.responseText);
                var newRandomNumbers = data.newRandomNumbers;

                var picturesContainer = document.querySelector('.pictures');

                // Retrieve the current number of images
                var currentImageCount = picturesContainer.querySelectorAll('.image').length;

                // Append new images to the existing ones
                for (var i = 0; i < newRandomNumbers.length; i++) {
                    var random = newRandomNumbers[i];
                    var imageElement = document.createElement('img');
                    imageElement.src = 'https://picsum.photos/id/' + random + '/500/300';
                    imageElement.alt = 'picsum';
                    picturesContainer.appendChild(imageElement);
                }
            }
        };

        xhr.open('GET', '/new', true);
        xhr.send();

        // Prevent the default form submission
        return false;
    }

    // Attach the form submission to the button click
    document.getElementById('morePhotosForm').addEventListener('submit', function (event) {
        event.preventDefault();
        fetchMorePhotos();
    });
    </script>
    
    
</body>
</html>